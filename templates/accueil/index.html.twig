{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}

<div class="row row-cols-1 row-cols-md-2 g-4">
{% for article in articles %}
  <div class="card border-success mb-3" style="max-width: 18rem;">
  <div class="card-header bg-transparent border-success">{{article.id}}</div>
  <div class="card-body text-success">
    <h5 class="card-title">{{article.title}}</h5>
    <p class="card-text">{{article.description}}</p>
  </div>
  <div class="card-footer bg-transparent border-success"><i class="bi-heart-fill" style="font-size: 1rem; color: cornflowerblue;"></i>{{article.likes}}</div>
</div>
  {% endfor %}
</div>

<div class="navigation">
    {{ knp_pagination_render(articles) }}
</div>
{% endblock %}
